<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:l="clr-namespace:MauiDemoApp"
             x:Class="MauiDemoApp.MainPage"
             x:DataType="l:MainPageViewModel"
             Title="Maui Demo">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,10"
            VerticalOptions="Start">

            <Button x:Name="_cGoToGesturesButton"
                    Text="Gestures"
                    Command="{Binding GotToGesturesCommand}"/>

            <Button x:Name="_cGotToMediaTakePictureButton"
                    Text="Take a photo"
                    Command="{Binding GotToMediaTakePictureCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
